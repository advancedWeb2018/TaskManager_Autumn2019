@using MakeIt.WebUI.ViewModel.Account
@model ForgotPasswordViewModel

@{
    ViewBag.Title = "MakeIt";
}

<div class="panel-body">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form-group">
                Enter your user account's verified email address and we will send you a password reset link.              
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail", @type = "email", @autofocus = "autofocus" })
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Email"].Errors.Count != 0)
                {
                    <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"><span>@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span></span>
                }
                else
                {
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                }
            </div>
            <button type="submit" value="enter" class="btn btn-lg btn-success btn-block">Send password reset email</button>
        </fieldset>
    }
</div>
