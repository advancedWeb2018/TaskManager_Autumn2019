@using MakeIt.WebUI.ViewModel
@model LoginViewModel
@{
    ViewBag.Title = "MakeIt";
}

<div class="panel-body">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail", @type = "email", @autofocus = "autofocus" })
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Email"].Errors.Count != 0)
                {
                    <span class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"><span>@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span></span>
                }
                else
                {
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                }
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", @type = "password" })
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Password"].Errors.Count != 0)
                {
                    <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"><span>@ViewData.ModelState["Password"].Errors[0].ErrorMessage</span></span>
                }
                else
                {
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                }
                @Html.ActionLink("Forgot password?", "ForgotPassword", "Account", routeValues: null, htmlAttributes: new { @class = "text-light bg-dark" })
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe, new { @type = "checkbox" })
                    Remember Me
                </label>
            </div>
            <button type="submit" value="enter" class="btn btn-lg btn-success btn-block">Login</button>
        </fieldset>
    }
</div>
<div class="panel-heading">
    <div class="p-3 mb-2 bg-dark text-white">
        <p>
            New to MakeIt?
            @Html.ActionLink("Create an account", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "text-light bg-dark" })
        </p>
    </div>
</div>




