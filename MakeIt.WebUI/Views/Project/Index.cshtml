@using MakeIt.WebUI.ViewModel;
@model List<ProjectViewModel>

@{
    ViewBag.Title = "MakeIt";
}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">Projects</h1>
        </div>
        <div class="col-lg-2">
            <button type="button" onclick="location.href='@Url.Action("Edit", "Project", routeValues: null)'" class="page-header btn btn-success">New project</button>
        </div>
    </div>
    <!-- /.row -->

    @if (Model != null)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Updated </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model)
                                {
                                <tr class="odd gradeX">
                                    <td hidden>@project.Id</td>
                                    <td>
                                       @Html.ActionLink(@project.Name, "Edit", "Project",
                                       new MakeIt.WebUI.ViewModel.ProjectViewModel
                                       {
                                           Id = project.Id,
                                           Name = project.Name,
                                           Description = project.Description
                                       },
                                       htmlAttributes: new { @class = "text-light bg-dark" })
                                    </td>
                                    <td>@project.Description</td>
                                    <td>@project.LastUpdateDate</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    }

    else
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    You have not created projects yet
                </div>
            </div>
        </div>
    }

</div>
<!-- /.page-wrapper -->
