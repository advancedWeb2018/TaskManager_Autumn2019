@using MakeIt.WebUI.ViewModel

@model ProjectViewModel
@{
    ViewBag.Title = "MakeIt";
}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Projects</h1>
        </div>
    </div>
    <!-- /.row -->

    <form role="form">
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form-group row">
                <div class="col-lg-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
</fieldset>
    </form>

</div>
<!-- /.page-wrapper -->
