@using MakeIt.WebUI.ViewModel

@model ProjectViewModel
@{
    ViewBag.Title = "MakeIt";
    var message = ViewBag.SuccessMsg;
    var actionResult = ViewBag.ActionResult;
}

<script defer src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.3.0/dist/latest/bootstrap-autocomplete.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
<script defer src="~/Scripts/fillEmailInput.js"></script>

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Project</h1>
        </div>
    </div>
    <!-- /.row -->
    @if (Model.RoleInProject == MakeIt.BLL.Enum.RoleInProjectEnum.Owner)
    {
        using (Html.BeginForm("EditProject", "Project", FormMethod.Post, new { @role = "form" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                @Html.HiddenFor(m => m.Id)
                <div class="form-group row">
                    <div class="col-lg-6">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", @autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-6">
                        @Html.TextAreaFor(m => m.Description, 5, 9, new { @class = "form-control", placeholder = "Description" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-1">
                        <button type="submit" value="enter" class="page-header btn btn-success">@ViewBag.ActionDetermination</button>
                    </div>
                    <div class="col-lg-1">
                        <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index","Project")';" class="page-header btn btn-success" />
                    </div>
                </div>
                <!-- /.row -->
            </fieldset>
        }
        <hr />
    }

    @if (Model.Id!=null)
    {
        <div class="row">
            <h3>Members</h3>
            <div class="col-lg-2">
                <table class="table table-bordered" cellspacing="0" cellpadding="3" width="100%" style="width: 0px;">
                    <tbody>
                        <tr>
                            <td>@Model.Owner.Name</td>
                            <td>@Model.Owner.Email</td>
                            <td><span class="label label-info">Owner</span></td>
                        </tr>
                        <tr>
                            @foreach (var member in Model.Members)
                            {
                                <td>@member.Name</td>
                                <td>@member.Email</td>
                                <td><span class="label label-default">Member</span></td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr />

        if (Model.RoleInProject == MakeIt.BLL.Enum.RoleInProjectEnum.Owner)
        {
            <form method="POST">
                @Html.AntiForgeryToken()
                <div class="form-group row">
                    <h4>Send an invite to join</h4>
                    <div class="col-lg-4">
                        <input value="@Model.Id" name="projectId" type="hidden">

                        <input name="email" class="form-control basicAutoComplete" type="text" autocomplete="off" placeholder="Enter email">

                    </div>
                    <div class="col-lg-2">
                        <input type="submit" value="Submit" id="Submit" class="btn btn-success" formaction=@Url.Action("SendInviteEmail", "Account") formmethod="post" />
                    </div>
                </div>
            </form>
        }
    }

</div>
<!-- /.page-wrapper -->

<script type="text/javascript">
    var message = '@message';
    if(message){
        alert(message);
    }

    var action = '@actionResult';
    if(action){
        alert(action);
    }
</script>