@using MakeIt.WebUI.ViewModel

@model ProjectViewModel
@{
    ViewBag.Title = "MakeIt";
}

<script defer src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.3.0/dist/latest/bootstrap-autocomplete.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
<script defer src="~/Scripts/fillEmailInput.js"></script>

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Project - @ViewBag.ActionDetermination</h1>
        </div>
    </div>
    <!-- /.row -->

    @using (Html.BeginForm("EditProject", "Project", FormMethod.Post, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            @Html.HiddenFor(m => m.Id)
            <div class="form-group row">
                <div class="col-lg-6">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-6">
                    @Html.TextAreaFor(m => m.Description, 5, 9, new { @class = "form-control", placeholder = "Description" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-1">
                    <button type="submit" value="enter" class="page-header btn btn-success">Save</button>
                </div>
                <div class="col-lg-1">
                    <button onclick="history.go(-1);return false;" type="button" value="back" class="page-header btn btn-success">Cancel</button>
                </div>
            </div>
            <!-- /.row -->
        </fieldset>
    }

    <hr />

    @if (Model != null)
    {
        <div class="row">
            <h3>Members</h3>
            <div class="col-lg-2">
                <table class="table table-bordered" cellspacing="0" cellpadding="3" width="100%" style="width: 0px;">
                    <tbody>
                        <tr>
                            <td>@Model.Owner.Name</td>
                            <td>@Model.Owner.Email</td>
                            <td><span class="label label-info">Owner</span></td>
                        </tr>
                        <tr>
                            @foreach (var member in Model.Members)
                            {
                                <td>@member.Name</td>
                                <td>@member.Email</td>
                                <td><span class="label label-default">Member</span></td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <hr />
        <div class="container">
            <div class="form-group row">
                <h4>Send an invite to join</h4>
                <div class="col-lg-4">
                    <input class="form-control basicAutoComplete" type="text" autocomplete="off" placeholder="Enter email">
                </div>
                <div class="col-lg-2">
                    <button type="submit" value="enter" class="btn btn-success">Submit</button>
                </div>
            </div>
        </div>
    }

</div>
<!-- /.page-wrapper -->
